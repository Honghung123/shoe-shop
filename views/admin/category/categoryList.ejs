<table class="my-table box-shadow-primary text-center">
    <thead>
        <tr>
            <th width="5%">STT</th> 
            <th width="10%">ID</th> 
            <th>Name</th>
            <th width="20%">...</th>
            <th width="25%">Action</th>
        </tr>
    </thead>
    <tbody class="category-list">
        <% categories.forEach((category, idx) => { %>
            <tr class="category-item" data-id="<%= category.id%>">
                <td><span><%= idx+1 %></span></td>
                <td><span><%= category.id%></span></td>
                <!-- <td class="flex-center-center column-gap-3 padding-1">
                    <div class="thumb">
                        <img class="image-custom size-m" src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    </div>
                </td> -->
                <td>
                    <span><%= category.name %></span>
                </td>
                <td>
                    <span class="">3</span>
                </td>
                <td>
                    <div class="flex-center-center column-gap-2 flex-wrap-wrap">
                        <button class="btn-custom btn-warning edit-category" data-bs-toggle="modal" data-bs-target="#editCategory"
                            data-id=<%= category.id %>>Edit</button>
                        <button class="btn-custom btn-danger delete-category" data-bs-toggle="modal" data-bs-target="#deleteCategory"
                            data-id='<%= category.id %>'>Delete</button>
                    </div>
                </td>
            </tr>
        <% }) %>
        
    </tbody>
</table>

<div class="text-center mt-4">
    <ul class="pagination">
        <a class="prev page-numbers" href="#">Prev</a>
        <span aria-current="page" class="page-numbers active">1</span>
        <a class="page-numbers" href="#">2</a>
        <a class="page-numbers" href="#">3</a>
        <a class="next page-numbers" href="#">Next</a>
    </ul>
</div>