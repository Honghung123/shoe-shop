<!DOCTYPE html>
<html lang="en">

<head>
  <title>Shoe store - Cart</title>
  <%- include('./partials/head'); -%>
</head>

<body>
  <%- include('./partials/nav'); -%>
  <%- include('./partials/preloader'); -%>


  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>My Cart</h2>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->

  <!-- Shoping Cart Section Begin -->
  <section class="shoping-cart mt-4">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-bordered shoping__cart__table text-center shopping__cart__table rounded-3">
            <thead>
              <tr>
                <th>Product info</th>
                <th width="15%">Price</th>
                <th width="7%">Quantity</th>
                <th width="15%">Total</th>
                <th width="10%">Action</th>
              </tr>
            </thead>
            <tbody id="shopping__cart__list">
              <tr class="shopping__cart__item">
                <td class="shopping__cart__info d-flex">
                  <img class="image" src="img/cart/cart-1.jpg" alt="">
                  <div class="shopping__cart__text d-flex justify-content-between flex-column mlr05">
                    <a href="details.html" class="hover__primary limit-line line-2">Adidas shoe made in Japan Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eum corrupti aliquid </a>
                    <div class="shopping__cart__classify">
                      <span>Color: <span class="border border-secondary border-1 rounded-circle background-green"></span></span>
                      <span>Size: XL</span>
                    </div>
                  </div>
                </td>
                <td class="shopping__cart__price">
                  <span class="color__primary currency">300000</span>
                </td>
                <td class="shopping__cart__quantity">
                  <div class="pro-qty">
                    <span class="decrease qtybtn">-</span>
                    <input type="text" value="1">
                    <span class="increase qtybtn">+</span>
                  </div>
                </td>
                <td class="shopping__cart__total">
                  <span class="color__primary currency">300000</span>
                </td>
                <td>
                  <span class="my-button button-hover-fadeIn rounded-3 fs-7 fw-bold custom-zoom delete__product"><i class="fa-solid fa-trash-can"></i> Delete</span>
                </td>
              </tr> 
              <tr class="shopping__cart__item">
                <td class="shopping__cart__info d-flex">
                  <img class="image" src="img/cart/cart-1.jpg" alt="">
                  <div class="shopping__cart__text d-flex justify-content-between flex-column mlr05">
                    <a href="details.html" class="hover__primary limit-line line-2">Adidas shoe made in Japan Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eum corrupti aliquid </a>
                    <div class="shopping__cart__classify">
                      <span>Color: <span class="border border-secondary border-1 rounded-circle background-yellow"></span></span>
                      <span>Size: S</span>
                    </div>
                  </div>
                </td>
                <td class="shopping__cart__price">
                  <span class="color__primary currency">350000</span>
                </td>
                <td class="shopping__cart__quantity">
                  <div class="pro-qty">
                    <span class="decrease qtybtn">-</span>
                    <input type="text" value="1">
                    <span class="increase qtybtn">+</span>
                  </div>
                </td>
                <td class="shopping__cart__total">
                  <span class="color__primary currency">350000</span>
                </td>
                <td>
                  <span class="my-button button-hover-fadeIn rounded-3 fs-7 fw-bold custom-zoom delete__product"><i class="fa-solid fa-trash-can"></i> Delete</span>
                </td>
              </tr> 
              <!-- <tr><td colspan="5" class="text-center"><span>Your cart is empty</span></td></tr> -->
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="shoping__cart__btns">
            <a href="shopping.html" class="my-button button-hover-fadeIn rounded-3 custom-zoom">Continue shopping</a>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="shoping__continue">
            <div class="shoping__discount">
              <h5>Freeship Code:</h5>
              <form action="#">
                <input type="text" placeholder="Enter your coupon code">
                <button type="submit" class="my-button button-hover-fadeIn rounded-3 background__primary">Apply</button>
              </form>
            </div>
            <div class="shoping__discount">
              <h5>Discount Code:</h5>
              <form action="#">
                <input type="text" placeholder="Enter your coupon code">
                <button type="submit" class="my-button button-hover-fadeIn rounded-3 background__primary">Apply</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="shoping__checkout">
            <h5>Cart Total</h5>
            <ul>
              <li>Subtotal <span>$454.98</span></li>
              <li>Total <span>$454.98</span></li>
            </ul>
            <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Shoping Cart Section End -->

   <!-- Footer Section -->
   <%- include('./partials/footer'); -%>
   <!-- Footer Section End -->
 
   <!-- Js Plugins -->
   <%- include('./partials/scripts'); -%>
   <script src="/public/client/js/cart.js"></script>
   <!-- Js Plugins End -->

</body>

</html>