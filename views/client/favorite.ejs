<!DOCTYPE html>
<html lang="en">

<head>
  <title>Shoe store - Favorite</title>
  <%- include('./partials/head'); -%>
</head>

<body>
  <%- include('./partials/nav'); -%>
    <%- include('./partials/preloader'); -%>


      <!-- Breadcrumb Section Begin -->
      <section class="breadcrumb-section">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 text-center">
              <div class="breadcrumb__text">
                <h2>Favorite</h2>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Breadcrumb Section End -->

      <!-- Shoping Cart Section Begin -->
      <section class="shoping-cart mt-4">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <table class="table table-bordered shoping__cart__table text-center shopping__cart__table rounded-3">
                <thead>
                  <tr>
                    <th>Product info</th>
                    <th width="15%">Price</th>
                    <th width="23%">Action</th>
                  </tr>
                </thead>
                <tbody id="shopping__cart__list">
                  <% if (favourites.length == 0) { %>
                    <tr><td colspan="3" class="text-center"><span>There is no product here</span></td></tr>
                  <% } %>
                  <% favourites.forEach(e => { %>
                  <tr data-id="<%= e.id %>" data-product="<%= e.product_id %>" class="shopping__cart__item">
                    <td class="shopping__cart__info d-flex">
                      <img class="image" src="<%= e.product.image %>" alt="">
                      <div class="shopping__cart__text d-flex justify-content-between flex-column mlr05">
                        <a href="detail?id=<%= e.product.id %>" class="hover__primary limit-line line-2"><%= e.product.name %></a>
                        
                      </div>
                    </td>
                    <td class="shopping__cart__price">
                      <% if (e.product.isSale) { %>
                      <span class="currency color__primary"><%= e.product.price_discount %></span>
                      <span class="currency product__discount__oldprice mlr05"><%= e.product.price %></span>
                      <% } else { %>
                      <span class="color__primary currency"><%= e.product.price %></span>
                      <% } %>
                    </td>
                    <td>
                      <span
                        class="my-button button-hover-fadeIn rounded-3 fs-7 fw-bold custom-zoom add__product__cart"><i
                          class="fa-solid fa-shopping-cart"></i> Add to cart</span>
                      <span data-check="favourite"
                        class="my-button button-hover-fadeIn rounded-3 fs-7 fw-bold custom-zoom delete__product mt-1 ml05"><i
                          class="fa-solid fa-trash-can"></i> Delete</span>
                    </td>
                  </tr>
                <% }) %>
                  
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
      <!-- Shoping Cart Section End -->
      <%- include('./addToCart'); -%>
      <%- include('./requireLoginModal'); -%>
      <!-- Footer Section -->
      <%- include('./partials/footer'); -%>
        <!-- Footer Section End -->

        <!-- Js Plugins -->
        <%- include('./partials/scripts'); -%>
          <!-- Js Plugins End -->
</body>

</html>