<!DOCTYPE html>
<html lang="en">

<head>
  <title>Shoe store - Contact</title>
  <%- include('./partials/head'); -%>
</head>

<body>
  <%- include('./partials/nav'); -%>
  <%- include('./partials/preloader'); -%>

  <!-- Breadcrumb Section Begin -->
  <section class="breadcrumb-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="breadcrumb__text">
            <h2>Contact Us</h2>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Breadcrumb Section End -->
  
  <div id="toast__container"></div>
  <div class="toast-notification slide-in-slide-out d-none">
    <div class="toast-content">
      <div class="toast-icon background-green wiggle-me">
        <i class="fa-solid fa-check"></i>
      </div>
      <div class="toast-msg limit-line line-3"></div>
    </div>
    <div class="toast-progress">
      <div class="toast-progress-bar"></div>
    </div>
  </div>  

  <!-- Map Begin -->
  <div class="map spad">
    <div style="max-width:100%;overflow:hidden;color:red;width:100%;height:30rem;">
      <div id="g-mapdisplay" style="height:100%; width:100%;max-width:100%;"><iframe style="height:100%;width:100%;border:0;" frameborder="0" src="https://www.google.com/maps/embed/v1/place?q=Ho+Chi+Minh+City+University+of+Science+(Linh+Trung+Campus),+Đông+Hòa,+Thành+Phố+Thủ+Đức,+Ho+Chi+Minh+City,+Vietnam&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8"></iframe></div><a class="googlemaps-made" rel="nofollow" href="https://www.bootstrapskins.com/themes" id="grab-maps-authorization">premium bootstrap themes</a>
      <style>
        #g-mapdisplay img {
          max-width: none !important;
          background: none !important;
          font-size: inherit;
          font-weight: inherit;
        }
      </style>
    </div>
  </div>
  <!-- Map End -->

  <!-- Contact Form Begin -->
  <div class="contact-form spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="contact__form__title">
            <h2>Leave Message</h2>
          </div>
        </div>
      </div>
      <form action="#">
        <div class="row">
          <div class="col-lg-6 col-md-6">
            <input type="text" placeholder="Your name">
          </div>
          <div class="col-lg-6 col-md-6">
            <input type="text" placeholder="Your Email">
          </div>
          <div class="col-lg-12 text-center">
            <textarea placeholder="Your message"></textarea>
            <button type="submit" class="my-button button-hover button-hover-fadeIn rounded-3">Send message</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- Contact Form End -->

   <!-- Footer Section -->
   <%- include('./partials/footer'); -%>
   <!-- Footer Section End -->
 
   <!-- Js Plugins -->
   <%- include('./partials/scripts'); -%> 
   <!-- Js Plugins End -->

</body>

</html>