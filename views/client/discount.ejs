<!DOCTYPE html>
<html lang="en">

<head>
  <title>Shoe store - Discount</title>
  <%- include('./partials/head'); -%>
</head>

<body>
  <%- include('./partials/nav'); -%>
    <%- include('./partials/preloader'); -%>

      <!-- Breadcrumb Section Begin -->
      <section class="breadcrumb-section">
        <div class="container">
          <div class="row">
            <div class="col-lg-12 text-center">
              <div class="breadcrumb__text">
                <h2>Discount</h2>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Breadcrumb Section End -->

      <!-- Discount Product Section Begin -->
      <section class="product__discount spad">
        <div class="container">
          <div class="product__discount-wrapper">
            <div class="product__discount__title">
              <h3>Sale off today</h3>
            </div>
            <div class="row mt-2">
              <div id="timer" class="d-flex flex-wrap justify-content-center gap-3 mb-4 w-100" style="user-select: none;">
                <div class="dealing-time text-center" id="days"></div>
                <div class="dealing-time text-center" id="hours"></div>
                <div class="dealing-time text-center" id="minutes"></div>
                <div class="dealing-time text-center" id="seconds"></div>
            </div>
              <div class="product__discount__slider owl-carousel">
                <% saleToday.forEach( e => { %>
                  <div class="mlr05 pt-2 pb-2">
                    <div data-id="<%= e.product.id %>" class="featured__item specific__product ">
                      <div class="featured__item__pic">
                        <img src="<%= e.product.image %>" style="<%= e.product.cat_name === 'Giày cao gót' ? 'object-position: center bottom;' : '' %>" class="image" alt="">
                        <ul class="featured__item__pic__hover">
                          <li><span class="add__to__favourite"><i class="fa fa-heart"></i></span></li>
                          <li><span class="add__to__cart"><i class="fa fa-shopping-cart"></i></span></li>
                        </ul>
                        <div class="product__discount__label">
                          <div class="product__discount__background">
                            <span class="product__discount__percent"><%= e.percent %></span>
                          </div>
                        </div>
                      </div>
                      <a href="/detail?id=<%= e.product.id %>" class="featured__item__text p-3">
                        <p class="limit-line line-2 mb-2"><%= e.product.name %></p>
                        <span class="currency color__primary"><%= e.product.price_discount %></span>
                        <span class="currency product__discount__oldprice mlr05"><%= e.product.price %></span>
                      </a>
                    </div>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- Discount Product Section End -->

      <!-- Best seller Section Begin -->
      <section class="spad">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="product__discount-title">
                <h2>All sell off products</h2>
              </div>
            </div>
          </div>
          <div class="row row-gap-4 mt-3 list-product-sale-page">
            <% sales.forEach( e => { %>
              <div class="col col-lg-3 col-md-4 col-sm-6">
                <div data-id="<%= e.product.id %>" class="featured__item specific__product ">
                  <div class="featured__item__pic">
                    <img src="<%= e.product.image %>" style="<%= e.product.cat_name === 'Giày cao gót' ? 'object-position: center bottom;' : '' %>" class="image" alt="">
                    <ul class="featured__item__pic__hover">
                      <li><span class="add__to__favourite"><i class="fa fa-heart"></i></span></li>
                      <li><span class="add__to__cart"><i class="fa fa-shopping-cart"></i></span></li>
                    </ul>
                    <div class="product__discount__label">
                      <div class="product__discount__background">
                        <span class="product__discount__percent"><%= e.percent %></span>
                      </div>
                    </div>
                  </div>
                  <a href="/detail?id=<%= e.product.id %>" class="featured__item__text p-3">
                    <p class="limit-line line-2 mb-2"><%= e.product.name %></p>
                    <span class="currency color__primary"><%= e.product.price_discount %></span>
                    <span class="currency product__discount__oldprice mlr05"><%= e.product.price %></span>
                  </a>
                </div>
              </div>
            <% }) %>
          </div>
          <div class="product__pagination pt-4 pb-4 text-center" style="user-select: none;">
            <a data-id="<%= parseInt(currentPage) - 1 %>" style="cursor: context-menu;" class="product__pagination__link <%= parseInt(currentPage) === 1 ? 'disabled' : '' %> "><i class="fa-solid fa-long-arrow-left"></i></a>                
              <% for(let i = 1; i <= totalPages; i++) { %>
                <% if (i === parseInt(currentPage)) { %>
                  <a data-id="<%= i %>" style="cursor: context-menu;" class="product__pagination__link active"><%= i %></a>
                <% } else { %>
                  <a data-id="<%= i %>" style="cursor: context-menu;" class="product__pagination__link"><%= i %></a>
                <% } %>
              <% } %>
              <a data-id="<%= parseInt(currentPage) + 1 > totalPages ? 0 : parseInt(currentPage) + 1 %>" style="cursor: context-menu;" class="product__pagination__link <%= parseInt(currentPage) === parseInt(totalPages) ? 'disabled' : '' %> "><i class="fa-solid fa-long-arrow-right"></i></a>
          </div>
        </div>
      </section>
      <!-- Best seller Section End -->

      <!-- Footer Section -->
      <%- include('./partials/footer'); -%>
        <!-- Footer Section End -->

        <!-- Js Plugins -->
        <%- include('./partials/scripts'); -%>
          <!-- Js Plugins End -->
          <script src="/public/client/js/discount.js"></script>
</body>

</html>