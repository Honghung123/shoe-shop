<!-- <div class="user-dashboard-info-box table-responsive mb-0 bg-white p-4 shadow-sm"> -->
<div>
    <table class="my-table box-shadow-primary text-center  ">
        <thead>
            <tr>
                <th width="10%">User ID</th>
                <th width="45%">Info</th>
                <th width="15%">Role</th>
                <th width="15%">Status</th>
                <th width="25%">Action</th>
            </tr>
        </thead>
        <tbody class="account-list">
            <% users.forEach((user, idx)=> { %>
                <tr class="account-item" data-id="<%= user.id %>">
                    <td><span>
                            <%= user.id %>
                        </span></td>
                    <td class="flex-start-center column-gap-custom padding-1 mlr-1">
                        <div class="thumb">
                            <img class="avatar size-35"
                                src="<%= user.avatar || 'https://bootdey.com/img/Content/avatar/avatar1.png'%>" alt="">
                        </div>
                        <div>
                            <h5 class="text-start">
                                <%= user.username %>
                            </h5>
                            <!-- <div class="user-info">
                                <ul class="list-unstyled text-start">
                                    <li>Account id: 123</li>
                                    <li>Balance: <span class="currency">100000</span></li>
                                </ul>
                            </div> -->
                        </div>
                    </td>
                    <td class="position-relative">
                        <span class="position-center" data-id="<%= user.id %>">
                            <%= user.role=='admin' ? 'Admin' : 'Customer' %>
                        </span>
                    </td>
                    <td class="position-relative">
                        <span class="position-center" data-id="<%= user.id %>">
                            <%= user.locked ? 'Banned' : 'Active' %>
                        </span>
                    </td>
                    <td>
                        <div class="flex-center-center column-gap-custom flex-wrap-wrap mt-2">
                            <button class="btn-custom p-0 delete-account text-danger">
                                <span class="material-icons-sharp deleted" data-bs-toggle="modal"
                                    data-bs-target="#deleteAccount" data-id="<%= user.id %>">
                                    delete </span>
                            </button>
                            <button
                                class="btn-custom p-0 ban-account <%= user.locked ? 'text-success' : 'text-danger' %>">
                                <span class="material-icons-sharp banned" data-bs-toggle="modal"
                                    data-bs-target="#banAccount" data-id="<%= user.id %>">
                                    block </span>
                            </button>
                        </div>
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>
</div>
<div class="text-center mt-4"> 
    <ul class="pagination">
        <button data-id="1" class="prev product-pagination page-numbers" id="first_page"><span class="material-icons-sharp">
                first_page
            </span></button>
        <button data-id="<%= parseInt(currentPage) > 1 ? parseInt(currentPage) - 1 : 1 %>"
            class="prev product-pagination page-numbers" id="prev_page"><span class="material-icons-sharp"> keyboard_arrow_left
            </span></button>
        <button data-id="<%= parseInt(currentPage) %>" class="product-pagination-current-page page-numbers no_hover">
            <span class="pagination_page" data-id="">Page <b id="current_page">
                    <%= parseInt(currentPage) %>
                </b> of <b>
                    <%= totalPages %>
                </b></span>
        </button>
        
        <button data-id="<%= parseInt(currentPage) === totalPages ? totalPages : parseInt(currentPage) + 1 %>"
            class="next product-pagination page-numbers"><span class="material-icons-sharp" id="next_page"> keyboard_arrow_right
            </span></button>
        <button data-id="<%= totalPages %>" class="next product-pagination page-numbers" id="last_page"><span
                class="material-icons-sharp"> last_page </span></button>
    </ul>
</div>